<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblNombres"
                    android:layout_marginTop="0sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="90sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombres1 Nombres2"
                    android:fontFamily="sans-serif-light"
                    android:textSize="17sp"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/lblPlaca"
                    android:layout_below="@+id/lblNombres"
                    android:layout_marginTop="0sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="90sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Placa"
                    android:fontFamily="sans-serif-light"
                    android:textSize="17sp"
                    android:singleLine="true"/>


                <TextView
                    android:layout_below="@+id/lblPlaca"
                    android:id="@+id/lblEstado"
                    android:layout_marginTop="0sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="90sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textColor="@color/botonazul"
                    android:fontFamily="sans-serif-light"
                    android:textSize="17sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_below="@+id/lblEstado"
                    android:id="@+id/lblDescripcion"
                    android:layout_marginTop="0sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="90sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Descripcion"
                    android:fontFamily="sans-serif-light"
                    android:textSize="17sp"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/aceptar"
                    style="?android:textAppearanceSmall"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:text="Ver Pedido"
                    android:textColor="@color/colortexto"
                    android:textStyle="bold"
                    android:backgroundTint="#1565C0"
                    android:background="@drawable/edittext_rounded_corners"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/moto"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@+id/lblNombres"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </RelativeLayout>

</LinearLayout>